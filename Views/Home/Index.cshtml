  padding-left: 0;
  font-size: 1rem;
  line-height: 1.8;
  color: #2C3E50;
  margin-bottom: 35px;
}

.primary-btn {
  background-color: #2C3E50;
  color: #fff;
  font-weight: 600;
  padding: 12px 28px;
  border-radius: 8px;
  text-decoration: none;
  transition: all 0.3s ease;
  display: inline-block;
}

.primary-btn:hover {
  background-color: #1c2b3a;
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
}

 




@* BOX 3 *@
.doctor-highlights {
  background-color: #ffffff;
  border: 1px solid #1c2b3a;
  padding: 80px 30px;
  text-align: center;
  font-family: 'Segoe UI', 'Roboto', sans-serif;
  margin-top: 100px ;
 

}

.highlight-title {
  font-size: 32px;
  color: #2C3E50;
  margin-bottom: 20px;
  position: relative;

}

.highlight-title::after {
  content: '';
  display: block;
  width: 70px;
  height: 3px;
  margin: 14px auto 0;
  border-radius: 2px;
}

.section-subtext {
  font-size: 16px;
  color: #34495E;
  max-width: 700px;
  margin: 0 auto 50px;
  line-height: 1.7;
}

.highlight-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 40px;
  max-width: 1100px;
  margin: 0 auto;


}

.highlight-item {
  background-color: #fdfdfd;
  border: 1px solid #eaeaea;
  border-radius: 12px;
  padding: 30px 24px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.highlight-item:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 22px rgba(0, 0, 0, 0.1);
}

.icon {
  font-size: 40px;
  margin-bottom: 20px;
  display: block;
}

.highlight-item h3 {
  font-size: 20px;
  color: #2C3E50;
  margin-bottom: 10px;
  font-weight: 100px;
}

.highlight-item p {
  font-size: 15px;
  color: #555;
  line-height: 1.6;
}






