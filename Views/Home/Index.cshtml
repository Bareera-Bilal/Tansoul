  box-sizing: border-box;
  border-radius: 100px;
}


.banner-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 16px;
}

.banner-subtitle {
  font-size: 1.1rem;
  color: #34495E;
