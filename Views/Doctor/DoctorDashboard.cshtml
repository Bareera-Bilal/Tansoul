@model P1WEBMVC.Models.ViewModels.DoctorView

@{
    ViewBag.Title = "Doctor Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    body {
        background-color: #e6ebef;
    }

    .patient-dashboard .btn {
        font-weight: 600;
        padding: 10px 20px;
        background-color: #34495e;
        color: white;
        border: none;
        border-radius: 8px;
        transition: 0.3s ease;
    }

    .patient-dashboard .btn:hover {
        background-color: #2c3e50;
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }
</style>




<div class="container-fluid my-4 patient-dashboard">
    <div class="row">
        <!-- Left Panel: Patient Profile -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm p-3 text-center">
                <img src="~/images/patient-avatar.png" class="rounded-circle mb-3" width="100" height="100"
                    alt="Patient Profile">
                <p class="text-muted">@Model.Doctor.Name</p>
                <p class="text-muted">@Model.Doctor.Username</p>
                <p><strong>Email:</strong> @Model.Doctor.Email</p>
                <p><strong>Phone:</strong> @Model.Doctor.Contact</p>
                <p><strong>Specialization:</strong> @Model.Doctor.Specialization</p>
                @* <a href="@Url.Action("EditProfile", "Doctor")" class="btn w-100 mt-2">Edit Profile</a> *@
                <a asp-controller="Doctor" asp-action="EditProfile" asp-route-doctorId="@Model.Doctor.DoctorId"
                    class="btn btn-primary">
                    Edit Profile
                </a>

            </div>
        </div>




<!-- Center Panel: Appointments -->
<div class="col-md-6 mb-4">
    <div class="card shadow-sm p-3">
        <h4 class="mb-3">Your Appointments</h4>
        @if (Model?.Appointments != null && Model.Appointments.Any())
        {
            <ul class="list-group">
                @foreach (var appt in Model.Appointments)
                {
                    <li class="list-group-item">
                        <div>
                            <strong>Doctor:</strong> @appt.Doctor<br />
                            <strong>Date:</strong> @appt.AppointmentDate<br />
                            <strong>Time:</strong> @appt.Time/>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">You have no upcoming appointments.</p>
        }
    </div>
</div>






    </div>


    
</div>
