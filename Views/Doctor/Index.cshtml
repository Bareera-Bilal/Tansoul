    }

    .doctor-banner p {
    
         color: #2C3E50;
    }

    .doctor-banner .btn {
        font-size: 1rem;
        font-weight: 600;
        padding: 12px 26px;
        margin: 5px;
        border-radius: 8px;
        border: none;
        color: #fff;
        background-color:  #2C3E50 ;
        transition: all 0.3s ease;
    }

    .doctor-banner .btn:hover {
        background-color: #1c2b3a;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
    }






@* Features *@

