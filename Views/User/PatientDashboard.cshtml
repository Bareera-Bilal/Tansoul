@model P1WEBMVC.Models.ViewModels.PatientView
@{
    ViewBag.Title = "Patient Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    body{
    background-color: #e6ebef;
}

    .patient-dashboard .btn {
        font-weight: 600;
        padding: 10px 20px;
        background-color: #34495e;
        color: white;
        border: none;
        border-radius: 8px;
        transition: 0.3s ease;
    }

    .patient-dashboard .btn:hover {
        background-color: #2c3e50;
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .doctor-profile {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .doctor-profile img {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 10px;
    }

    .doctor-profile small {
        color: #666;
    }
</style>



<div class="container-fluid my-4 patient-dashboard">
    <div class="row">

        <!-- Left Panel: Patient Profile -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm p-3 text-center">
                <img src="~/images/patient-avatar.png" class="rounded-circle mb-3" width="100" height="100" alt="Patient Profile">
           
                   <p class="text-muted">@Model.Patient.Username</p>
                <p><strong>Email:</strong> @Model.Patient.Email</p>
                <p><strong>Phone:</strong> @Model.Patient.PhoneNumber</p>
               
                @* <a href="@Url.Action("PatientEditProfile", "User")" class="btn w-100 mt-2">Edit Profile</a> *@

                <a asp-controller="User" asp-action="EditProfile" asp-route-patientId="@Model.Patient.PatientId"
                    class="btn btn-primary">
                    Edit Profile
                </a>

            </div>
        </div>


<!-- Center Panel: Appointments -->
<div class="col-md-6 mb-4">
    <div class="card shadow-sm p-3">
        <h4 class="mb-3">Your Appointments</h4>
        @if (Model?.Appointments != null && Model.Appointments.Any())
        {
            <ul class="list-group">
                @foreach (var appt in Model.Appointments)
                {
                    <li class="list-group-item">
                        <div>
                            <strong>Doctor:</strong> @appt.Doctor<br />
                            <strong>Date:</strong> @appt.AppointmentDate<br />
                            <strong>Time:</strong> @appt.Time/>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">You have no upcoming appointments.</p>
        }
    </div>
</div>




